@model List<RestrictionApp>
<table id="restrictionAppTable" class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
			<th>Restriction Apps</th>
			<th>Control</th>
		</tr>
	</thead>
	<tbody id="restriction-body">
		@if (Model == null || !Model.Any())
		{
			<tr>
				<td colspan="2">No Restriction Apps Record(s)</td>
			</tr>
		}
		else
		{
			for (int i = 0; i < Model.Count; i++)
			{
				<tr data-index="@i">
					<td class="resAppText">@Model[i].ResApp</td>
					<td>
						<a class="btn btn-sm btn-link edit-btn">Edit</a>
						<a class="btn btn-sm btn-primary update-btn d-none">Update</a>
						<a class="btn btn-sm btn-secondary cancel-btn d-none">Cancel</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
