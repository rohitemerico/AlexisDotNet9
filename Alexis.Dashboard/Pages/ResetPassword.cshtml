@page
@model Alexis.Dashboard.Pages.ResetPasswordModel
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
	<title>Reset Password - V-Series</title>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

	<!-- Bootstrap 5-->
	<link href="~/css/bootstrap-5.0.2-dist/bootstrap.min.css" rel="stylesheet">
	<script src="~/js/bootstrap-5.0.2-dist/bootstrap.bundle.min.js"></script>

	<!-- Font Awesome 5-->
	<link href="~/css/Font-Awesome-5.1.0/all.min.css" rel="stylesheet">

	<!--Custom Style-->
	<link href="~/css/General.css" rel="stylesheet">

	<!--Custom Style-->
	<link href="~/css/Auth/General.css" rel="stylesheet">
	<link href="~/css/Auth/Element.css" rel="stylesheet">
</head>
<body>
	<form method="post">
		<div class="container-fluid">
			<!-- LOGO -->
			<div class="row py-4">
				<div class="col text-center">
					<img class="adcb_logo" src="~/img/Logo/logo_alexis_v_series@2x.png" alt="Logo" />
				</div>
			</div>
			<!-- User Card -->
			<div class="row">
				<div class="col">
					<div class="user_card">
						@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
						{
							<div class="alert alert-danger" id="message-alert">
								<label id="lblMsg">@Model.ErrorMessage</label>
							</div>
						}
						<h4 class="auth_title">Reset Password</h4>
						@Html.AntiForgeryToken()
						 <label for="NewPassword">New Password</label>
						<div class="form-group">
							<input asp-for="NewPassword" class="form-control value-inner" placeholder="New Password" />
							<span asp-validation-for="NewPassword" class="text-danger"></span>
						</div>
						<label for="ConfirmPassword">Confirm Password</label>
						<div class="form-group">
							<input asp-for="ConfirmPassword" class="form-control value-inner" placeholder="Confirm Password" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="btn-group">
							<button type="submit" class="btn theme_gradient text-white" style="height: 50px;">Reset Password</button>
						</div>
					</div>
				</div>
			</div>

			<!--Footer-->
			<div class="row">
				<div class="col text-center">
					<div class="mt-4 text-center my-copyright">
						<div class="mt-4 text-center text-white">
							<span style="opacity: 0.8;">Proceed to </span><b><a href="~/Login" class="text-white">Login</a></b>
						</div>
						<div class="mt-5 text-center" style="opacity: 0.8;">                         </div>
						<div style="opacity: 0.5; color: #ffffff; font-size: 0.6rem;">Copyright &#64; Emerico Sdn Bhd. All Right Reserved.</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</body>
</html>