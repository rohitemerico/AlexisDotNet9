								<span asp-validation-for="CardSms" style="color: red;"></span>
							</td>
							<td>
								<textarea asp-for="CardTInterval" style="border-color:#E3E3E3;height:50px;width:200px;font-size: 14px; font-family: 'ITC Avant Garde Gothic Std Medium'; color: #5D5D5D; padding: 6px; resize: none"></textarea>
