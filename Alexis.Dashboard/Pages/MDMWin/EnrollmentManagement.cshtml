@page
@model Alexis.Dashboard.Pages.MDMWin.EnrollmentManagementModel
@{
	ViewData["Title"] = "Windows MDM > Enrollment Management";
}

<nav class="navbar-title navbar navbar-default" style="background-color: white; margin-bottom: 10px; padding: 15px 50px; box-shadow: 1px 2px 10px -2px rgba(0, 0, 0, 0.2);">
	<div class="container-fluid row align-items-center flex-wrap">
		<div class="col-12 col-lg-auto mb-2">
			<div class="nav-text  mr-2 d-lg-inline text-gray-600 small">
				<label id="LabelTitle">@ViewData["Title"]</label>
			</div>
		</div>
		<!-- NavBar2: Right -->
		<div class="col-12 col-lg col-md d-flex flex-wrap align-items-center justify-content-lg-end justify-content-md-end" style="justify-content:flex-end">
			<!-- Refresh -->
			<button class="btn reportBtn theme_outline_only_btn" type="button" onclick="window.location.reload();"><i class="fa fa-refresh fa-sm"></i> Refresh </></button>
		</div>
	</div>
</nav>
<div class="contentRoot navbar navbar-default">
	<!-- Global Modal -->
	<div class="modal fade" id="globalModal" tabindex="-1" aria-labelledby="globalModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<Label ID="lblCaption"><span id="gModalTitle"></span></Label>
				</div>
				<div class="modal-body">
					<Label ID="lblMessage" class="labelMedium"><span id="gModalBody"></span></Label>
				</div>
				<div class="modal-footer">
					<a id="gModalLink" class="btn theme_gradient_btn" href="#" role="button">OK</a>
				</div>
			</div>
		</div>
	</div>
	<div class="my-5 p-4 bg-white text-left">
		<!--Download Instruction -->
		<i class="fa fa-list" aria-hidden="true"></i><a style="color: #007bff; text-decoration: underline;" href="~/vStatic/Documentation/windows-mdm-enroll-steps.docx" download="windows-mdm-enroll-steps.docx">	Download Enrollment Steps</a>

		<!--Copy URL-->
		<div class="input-group mb-3 pt-3">
			<input type="text" id="myInput" class="form-control" disabled="disabled" value="https://cloud.emerico.biz/winmdm_enroll/Discovery.svc" />
			<div class="input-group-append">
				<button type="button" id="button-addon2" class="btn btn-outline-secondary" onclick="CopyText()">Copy MDM Server URL</button>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<script type="text/javascript">
		function CopyText() {
			/* Get the text field */
			var copyText = document.getElementById("myInput");

			/* Select the text field */
			copyText.select();
			copyText.setSelectionRange(0, 99999); /* For mobile devices */

			/* Copy the text inside the text field */
			navigator.clipboard.writeText(copyText.value);

			/* Alert the copied text */
			UpdateModalMessage("Successful!", "URL copied.", "#");
			ShowModal();
		}
	</script>
	}